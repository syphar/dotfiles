# font-family = BlexMono Nerd Font Mono Light
# font-family-bold = BlexMono Nerd Font Mono Medium
# font-family-italic = BlexMono Nerd Font Mono Light Italic
# font-family-bold-italic = BlexMono Nerd Font Mono Medium Italic
font-family = BlexMono Nerd Font Mono ExtraLight
font-family-bold = BlexMono Nerd Font Mono Light
font-family-italic = BlexMono Nerd Font Mono ExtraLight Italic
font-family-bold-italic = BlexMono Nerd Font Mono Light Italic
font-size = 14
font-thicken = true
bold-is-bright = true
theme = Kanagawa Wave

link-url = true

macos-auto-secure-input = true
macos-option-as-alt = true

# MAP WINDOW / PANE / TAB KEYMAPS TO TMUX KEYBINDS

# switch tabs via CMD+{num}
keybind = cmd+Digit1=text:\x010
keybind = cmd+Digit2=text:\x011
keybind = cmd+Digit3=text:\x012
keybind = cmd+Digit4=text:\x013
keybind = cmd+Digit5=text:\x014
keybind = cmd+Digit6=text:\x015
keybind = cmd+Digit7=text:\x016
keybind = cmd+Digit8=text:\x017
keybind = cmd+Digit9=text:\x018

# TABS

# close tab
keybind = cmd+w=text:\x01& 
# new tab
keybind = cmd+t=text:\x01c 

# PANES

# split horizontally
keybind = cmd+d=text:\x01| 

# split vertically
keybind = cmd+shift+d=text:\x01- 

# zoom pane
keybind = cmd+shift+enter=text:\x01z 
